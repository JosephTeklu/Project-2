{{#each users as |user| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{{get_emoji}}} {{user.name}}</h2>
  </div>
  <div class="col-md-6">
    <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
  </div>
</div>
{{/each}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Shorten your Url</h3>

    <form class="form new-url-form">
      <div class="form-group">
        <label for="url">url</label>
        <input class="form-input" type="text" id="url" name="url" />
      </div>
        <button type="submit" class="btn btn-primary shorten-button">Shorten</button>
      </div>
    </form>
  </div>

  {{#if url.length}}
  <div class="col-md-6 url-list">
    <h3>Your Urls</h3>

    {{#each url as |url|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/url/{{url.id}}">{{url.short_link}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{url.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/url.js"></script>
